colors: with colors; ''
ipc_socket = false
live_config_reload = false

[colors.primary]
background = "${black}"
foreground = "${white}"
bright_foreground = "${whiteBright}"

[colors.normal]
black = "${black}"
red = "${red}"
green = "${green}"
yellow = "${yellow}"
blue = "${blue}"
magenta = "${magenta}"
cyan = "${cyan}"
white = "${white}"

[colors.bright]
black = "${blackBright}"
red = "${redBright}"
green = "${greenBright}"
yellow = "${yellowBright}"
blue = "${blueBright}"
magenta = "${magentaBright}"
cyan = "${cyanBright}"
white = "${whiteBright}"

[cursor]
unfocused_hollow = true

[cursor.style]
blinking = "Off"
shape = "Block"

[font]
size = 14.0

[font.bold]
family = "BlexMono Nerd Font"

[font.bold_italic]
family = "BlexMono Nerd Font"

[font.italic]
family = "BlexMono Nerd Font"

[font.normal]
family = "BlexMono Nerd Font"

[[keyboard.bindings]]
action = "ReceiveChar"
key = "Key0"
mods = "Control"

[[keyboard.bindings]]
action = "ReceiveChar"
key = "Equals"
mods = "Control"

[[keyboard.bindings]]
action = "ReceiveChar"
key = "Plus"
mods = "Control"

[[keyboard.bindings]]
action = "ReceiveChar"
key = "NumpadAdd"
mods = "Control"

[[keyboard.bindings]]
action = "ReceiveChar"
key = "Minus"
mods = "Control"

[[keyboard.bindings]]
action = "ReceiveChar"
key = "NumpadSubtract"
mods = "Control"

[window]
decorations = "none"
resize_increments = true
''
